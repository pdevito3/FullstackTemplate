{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Aspire.Hosting.Dcp": "Warning",
        "Aspire.Hosting.ApplicationModel": "Warning",
        "Aspire.Hosting.Health": "Warning",

        // Uncomment to enable targeted debug logging:
        // "Aspire.Hosting": "Debug",
        // "FullstackTemplate.AppHost": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}      {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
